<Window x:Class="LangLang.Views.DirectorViews.DirectorMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.Views.DirectorViews"
        mc:Ignorable="d"
        Title="DirectorMainMenu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Command="{Binding LogOutCommand}" Content="Log Out" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <Button Command="{Binding ViewTeachersCommand}" Content="View Teachers" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <Button Command="{Binding SendOutGradesCommand}" Content="Send out grades" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>

    </Grid>
</Window>
