<Window x:Class="LangLang.Views.TeacherMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TeacherMenu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Command="{Binding CourseCommand}" Content="Courses" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <Button Command="{Binding ExamCommand}" Content="Exams" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <Button Command="{Binding LogOutCommand}" Content="Log Out" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
