<Window x:Class="LangLang.Views.StudentViews.DropOutModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LangLang.Views.StudentViews"
        mc:Ignorable="d"
        Title="DropOutModal" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter a reason for dropping out" Margin="0 0 0 10" />
            <TextBox x:Name="ResponseTextBox" Margin="0 0 0 10" Width="250" />
            <Button Content="OK" Click="OKButton_Click" />
        </StackPanel>
        
    </Grid>
</Window>
