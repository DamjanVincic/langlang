<Window x:Class="LangLang.Views.StudentViews.TeacherReviewModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LangLang.Views.StudentViews"
        mc:Ignorable="d"
        Title="TeacherReviewModal" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter a number between 1 and 10:" Margin="0 0 0 10" />
            <TextBox x:Name="ResponseTextBox" Margin="0 0 0 10" Width="250" TextChanged="ResponseTextBox_TextChanged"/>
            <Button Content="OK" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
