<Window x:Class="LangLang.View.AddLanguageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        Title="AddLanguageView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Language:" Grid.Row="0"/>
        <TextBox Grid.Row="1"  Text="{Binding LanguageName}"/>
        <TextBlock Text="Level:"  Grid.Row="2"/>
        <ComboBox Grid.Row="3" Margin="10" ItemsSource="{Binding LanguageLevelValues}" SelectedItem="{Binding SelectedLanguageLevel}"/>
        <Button Grid.Row="4" Content="Add" Command="{Binding AddLanguageCommand}"/>
    </Grid>
</Window>
